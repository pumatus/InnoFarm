<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



    <view
        android:id="@+id/main_pager"
        class="com.innofarm.external.MyViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

    <!-- 	<android.support.v4.view.ViewPager
            android:id="@+id/main_pager"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0" /> -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#404040"></View>
    <RadioGroup
        android:background="@color/color_white"
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"

        >

        <RadioButton
            android:id="@+id/rb_work"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_rewu"
            android:text="任务" />

        <RadioButton
            android:id="@+id/rb_operation"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_caozuo"
            android:text="操作" />

        <RadioButton
            android:id="@+id/rb_info"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_xinxi"
            android:text="信息" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/selector_shezhi"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>