<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/topview"/>

    <RelativeLayout
        android:id="@+id/rl_version_up"
        style="@style/taskremind_layout">

        <TextView

            style="@style/taskremind_event_tv"
            android:text="当前版本"
            />


        <TextView
            android:id="@+id/tv_nowversion"
            style="@style/taskremind_eventnum_tv"
            android:text="所有82项"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgray"
        />

    <RelativeLayout
        android:id="@+id/rl_checkversion"
        style="@style/taskremind_layout">

        <TextView

            style="@style/taskremind_event_tv"
            android:text="检查新版本"
            />


        <TextView

            style="@style/taskremind_eventnum_tv"
            android:text="所有82项"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgray"
        />



</LinearLayout>